#!/bin/bash
set -eu

replace() {
	a="$1"
	b="$2"
	f="$3"
	# handle gnu and bsd sed
	sed -i.tmp "s/$a/$b/g" "$f" && rm "$f.tmp"
}

dir="${1:-.}"
if [[ -z "$dir" ]]; then
	echo "Error: missing destination pathname"
	exit 1
fi

app=${dir##*/}
if [[ "$app" == "." ]]; then
	app=${PWD##*/}
fi

echo "Creating app..."
git clone --depth=1 https://github.com/subfuzion/typescript-starter-app.git "$dir"
rm -rf "$dir/.git" >/dev/null


printf "â³ Preparing app..."
cd "$dir"
replace "typescript-starter-app" "$app" package.json
git init 1>/dev/null
npm install 1>/dev/null
git add . 1>/dev/null
git commit -m "Initial commit" 1>/dev/null
echo "done."

echo "âœ… Success: created typescript-starter-app ($app)"
echo "ðŸš€ You're ready to start coding!"
if [[ "$dir" != "." ]]; then
  echo "Enter:"
	printf "\tcd $dir\n"
fi
